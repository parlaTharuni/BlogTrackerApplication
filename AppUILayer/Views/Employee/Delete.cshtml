@model AppUILayer.Models.BlogViewModel

@{
    ViewBag.Title = "Delete";
}
<div class="container p-2">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal ms-4 ">
            <dt>
                <label for="Title"> Blog Title :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                <label for="Subject"> Blog Subject :</label>

            </dt>

            <dd>
                @Html.DisplayFor(model => model.Subject)
            </dd>

            <dt>
                <label for="DateOfCreation"> Date of Creation :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOfCreation)
            </dd>

            <dt>
                <label for="BlogURL">Blog URL :</label>

            </dt>

            <dd>
                @Html.DisplayFor(model => model.BlogUrl)
            </dd>

            <dt>
                <label for="Employee Name"> Created By :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EmployeeName)
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Employee", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="row">
                    <div class="col-4 ms-3">
                        <input type="submit" value="Delete" class="btn btn-outline-warning" />
                        <a href="@Url.Action("Home", "Employee")" class="btn btn-outline-dark m-2">Back to List</a>

                    </div>
                </div>
            </div>
        }

    </div>
</div>
